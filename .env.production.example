# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=3006

# JWT Configuration
JWT_SECRET=your_super_secure_random_secret_key_here_change_this
JWT_EXPIRE=7d

# Frontend URLs
FRONTEND_URL=https://dashboard.bizoforce.com
FRONTEND_PRODUCTION_URL=https://dashboard.bizoforce.com

# Unified Database (MySQL)
UNIFIED_DB_HOST=72.167.148.100
UNIFIED_DB_PORT=3306
UNIFIED_DB_USER=your_db_user
UNIFIED_DB_PASS=your_db_password
UNIFIED_DB_NAME=bizoforce_newdashboard

# Bizoforce WooCommerce Database (MySQL)
BIZOFORCE_DB_HOST=72.167.148.100
BIZOFORCE_DB_PORT=3306
BIZOFORCE_DB_USER=your_db_user
BIZOFORCE_DB_PASS=your_db_password
BIZOFORCE_DB_NAME=bizoforce_wp

# Giglancer Database (MySQL)
GIGLANCER_DB_HOST=72.167.148.100
GIGLANCER_DB_PORT=3306
GIGLANCER_DB_USER=your_db_user
GIGLANCER_DB_PASS=your_db_password
GIGLANCER_DB_NAME=giglancer_db

# Screenly Database (PostgreSQL)
SCREENLY_DB_HOST=72.167.148.100
SCREENLY_DB_PORT=5432
SCREENLY_DB_USER=your_pg_user
SCREENLY_DB_PASS=your_pg_password
SCREENLY_DB_NAME=screenly_db

# Work.Bizoforce Database (MySQL)
WORK_DB_HOST=72.167.148.100
WORK_DB_PORT=3306
WORK_DB_USER=your_db_user
WORK_DB_PASS=your_db_password
WORK_DB_NAME=work_bizoforce_db

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://dashboard.bizoforce.com/api/auth/google/callback

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=https://dashboard.bizoforce.com,https://www.bizoforce.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
